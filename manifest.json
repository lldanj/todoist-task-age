{
  "manifest_version": 3,
  "name": "Todoist Creation Date Viewer",
  "version": "1.1",
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": ["https://api.todoist.com/*", "https://todoist.com/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://app.todoist.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
